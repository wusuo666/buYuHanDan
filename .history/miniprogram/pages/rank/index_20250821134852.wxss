/* pages/rank/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f0f4f7;
}

/* 标签切换 */
.tab-bar {
  display: flex;
  height: 100rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666666;
  position: relative;
  transition: all 0.3s;
}

.tab-item.active {
  color: #1AAD19;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #1AAD19;
  border-radius: 3rpx;
}

/* 我的排名卡片 */
.my-rank-card {
  margin: 20rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #1AAD19 0%, #2ECC71 100%);
  border-radius: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(26, 173, 25, 0.2);
}

/* 我的排名内容 */
.my-rank-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.my-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.my-nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
}

.my-stats {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.stat-item {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.my-progress {
  margin-top: 10rpx;
}

.progress-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  background: rgba(255, 255, 255, 0.15);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.my-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  align-self: center;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
  flex-wrap: wrap;
}

.share-btn {
  flex: 1;
  min-width: 180rpx;
  height: 80rpx;
  border: none;
  border-radius: 40rpx;
  background: rgba(255, 255, 255, 0.2);
  color: #ffffff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  transition: all 0.3s;
}

.share-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.3);
}

.poster-btn {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
}

.invite-btn {
  background: linear-gradient(135deg, #4ECDC4 0%, #44A08D 100%);
}

.share-btn .iconfont {
  font-size: 32rpx;
}

/* 排行榜列表 */
.rank-list {
  flex: 1;
  padding: 0 20rpx;
}

.rank-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 20rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.rank-item:active {
  transform: scale(0.98);
}

.rank-number {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #666666;
  margin-right: 30rpx;
}

.rank-number.top-1 {
  color: #FFD700;
  font-size: 36rpx;
}

.rank-number.top-2 {
  color: #C0C0C0;
  font-size: 34rpx;
}

.rank-number.top-3 {
  color: #CD7F32;
  font-size: 32rpx;
}

.medal {
  font-size: 40rpx;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin-right: 30rpx;
  border: 4rpx solid #f0f4f7;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.user-nickname {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.tag-me {
  background: #1AAD19;
  color: #ffffff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.user-progress {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.progress-item {
  font-size: 26rpx;
  color: #666666;
  background: #f8f9fa;
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
}

.score-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 5rpx;
}

.score-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #1AAD19;
}

.score-label {
  font-size: 24rpx;
  color: #999999;
}

/* 加载提示 */
.loading-tip, .no-more-tip {
  text-align: center;
  padding: 40rpx;
  color: #999999;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #666666;
  margin-bottom: 20rpx;
}

.empty-sub {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 40rpx;
}

.go-game-btn {
  background: #1AAD19;
  color: #ffffff;
  border: none;
  border-radius: 40rpx;
  padding: 20rpx 40rpx;
  font-size: 30rpx;
}

/* 邀请弹窗 */
.invite-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.invite-container {
  width: 600rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  max-height: 80vh;
  overflow-y: auto;
}

.invite-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.invite-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.invite-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666666;
}

.invite-content {
  margin-bottom: 40rpx;
}

.invite-message {
  display: block;
  font-size: 30rpx;
  color: #333333;
  line-height: 1.6;
  margin-bottom: 30rpx;
  text-align: center;
}

.invite-features {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.feature-icon {
  font-size: 40rpx;
}

.feature-text {
  font-size: 28rpx;
  color: #333333;
}

.invite-actions {
  display: flex;
  gap: 20rpx;
}

.invite-btn {
  flex: 1;
  height: 80rpx;
  border: none;
  border-radius: 40rpx;
  font-size: 30rpx;
  transition: all 0.3s;
}

.invite-btn.primary {
  background: #1AAD19;
  color: #ffffff;
}

.invite-btn.secondary {
  background: #f0f0f0;
  color: #666666;
}

.invite-btn:active {
  transform: scale(0.95);
}

/* 海报弹窗 */
.poster-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.poster-container {
  width: 80vw;
  max-width: 600rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  text-align: center;
}

.poster-image {
  width: 100%;
  height: 800rpx;
  border-radius: 16rpx;
  margin-bottom: 40rpx;
}

.poster-actions {
  display: flex;
  gap: 20rpx;
}

.poster-btn {
  flex: 1;
  height: 80rpx;
  border: none;
  border-radius: 40rpx;
  font-size: 30rpx;
  transition: all 0.3s;
}

.save-btn {
  background: #1AAD19;
  color: #ffffff;
}

.cancel-btn {
  background: #f0f0f0;
  color: #666666;
}

.poster-btn:active {
  transform: scale(0.95);
}

/* 授权提示 */
.auth-tip {
  margin: 40rpx;
  padding: 40rpx;
  background: #ffffff;
  border-radius: 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.tip-text {
  display: block;
  font-size: 30rpx;
  color: #666666;
  margin-bottom: 30rpx;
}

.auth-btn {
  background: #1AAD19;
  color: #ffffff;
  border: none;
  border-radius: 40rpx;
  padding: 20rpx 40rpx;
  font-size: 30rpx;
}

/* Canvas */
.poster-canvas {
  position: fixed;
  left: -9999px;
  top: -9999px;
}