/* pages/rank/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f0f4f7;
}

/* 标签切换 */
.tab-bar {
  display: flex;
  height: 100rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666666;
  position: relative;
  transition: all 0.3s;
}

.tab-item.active {
  color: #1AAD19;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #1AAD19;
  border-radius: 3rpx;
}

/* 我的排名卡片 */
.my-rank-card {
  margin: 20rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #1AAD19 0%, #2ECC71 100%);
  border-radius: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(26, 173, 25, 0.2);
}


/* 我的排名内容 */
.my-rank-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.rank-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #ffffff;
}

.rank-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
}

.rank-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 10rpx;
}