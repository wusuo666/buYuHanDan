/* pages/rank/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f0f4f7;
}

/* 分享按钮样式 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.share-btn {
  flex: 1;
  background: rgba(255, 255, 255, 0.2);
  color: #ffffff;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
  font-weight: bold;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s;
}

.share-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.3);
}

.timeline-btn {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  border-color: #FF6B6B;
}

.timeline-btn:active {
  background: linear-gradient(135deg, #FF5252 0%, #FF7043 100%);
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  color: #cccccc;
}

.empty-text {
  font-size: 36rpx;
  color: #666666;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.empty-sub {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.go-game-btn {
  background: linear-gradient(135deg, #1AAD19 0%, #2ECC71 100%);
  color: #ffffff;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 20rpx rgba(26, 173, 25, 0.3);
}

/* 海报弹窗样式 */
.poster-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.poster-container {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  max-width: 90vw;
  max-height: 90vh;
  overflow: hidden;
}

.poster-image {
  width: 100%;
  height: auto;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}

.poster-actions {
  display: flex;
  gap: 20rpx;
}

.poster-btn {
  flex: 1;
  padding: 20rpx;
  border: none;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.save-btn {
  background: linear-gradient(135deg, #1AAD19 0%, #2ECC71 100%);
  color: #ffffff;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666666;
}

/* 标签切换 */
.tab-bar {
  display: flex;
  height: 100rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666666;
  position: relative;
  transition: all 0.3s;
}

.tab-item.active {
  color: #1AAD19;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #1AAD19;
  border-radius: 3rpx;
}

/* 我的排名卡片 */
.my-rank-card {
  margin: 20rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #1AAD19 0%, #2ECC71 100%);
  border-radius: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(26, 173, 25, 0.2);
}


/* 我的排名内容 */
.my-rank-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.rank-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #ffffff;
}

.rank-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
}

.rank-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 10rpx;
}