<view class="container">
  <view class="title-container">
    <text class="title">闻事猜词</text>
    <text class="subtitle">根据故事猜成语</text>
  </view>

  <!-- 图片轮播区域 -->
  <view class="image-carousel" wx:if="{{images && images.length}}">
    <swiper 
      class="image-swiper" 
      current="{{currentImageIndex}}" 
      bindchange="onImageSwiperChange"
      circular="{{true}}"
      autoplay="{{true}}"
      interval="3000"
      duration="300"
    >
      <block wx:for="{{images}}" wx:key="index">
        <swiper-item>
          <image class="carousel-image" src="{{item}}" mode="aspectFill"></image>
        </swiper-item>
      </block>
    </swiper>
    <view class="image-indicator" wx:if="{{images.length > 1}}">
      <text class="image-indicator-text">{{currentImageIndex + 1}}/{{images.length}}</text>
    </view>
  </view>

  <view class="story-container">
    <text class="story-content">{{story}}</text>
  </view>

  <view class="input-container">
    <input class="input" placeholder="请输入你猜测的成语" bindinput="onInput" value="{{inputValue}}"></input>
    <button class="submit-button" bindtap="submitAnswer">提交</button>
  </view>

  <button class="next-button" bindtap="getNext">下一个</button>

  <view class="modal" wx:if="{{showModal}}">
    <view class="modal-content">
      <text class="modal-title">{{modalTitle}}</text>
      <view wx:if="{{!isCorrect}}">
        <text>正确答案：{{answer.idiom}}</text>
      </view>
      <button class="modal-button" bindtap="closeModal">关闭</button>
    </view>
  </view>
</view>