<view class="container">
  <view class="game-area">
    <!-- 成语列表 -->
    <view class="idiom-list">
      <view
        wx:for="{{idioms}}"
        wx:key="{{item.id}}"
        data-id="{{item.id}}"
        class="idiom-item {{item.matched ? 'matched' : ''}} {{selectedIdiom === item.id ? 'selected' : ''}}"
        bindtap="selectIdiom"
      >
        {{item.idiom}}
      </view>
    </view>

    <!-- 地点列表 -->
    <view class="location-list">
      <view
        wx:for="{{locations}}"
        wx:key="{{item.id}}"
        data-id="{{item.id}}"
        class="location-item {{item.matched ? 'matched' : ''}} {{selectedLocation === item.id ? 'selected' : ''}}"
        bindtap="selectLocation"
      >
        {{item.location}}
      </view>
    </view>
  </view>

  <view class="score-area">
    <text>得分: {{score}}</text>
  </view>

  <button class="reset-button" bindtap="resetGame">重新开始</button>
</view>