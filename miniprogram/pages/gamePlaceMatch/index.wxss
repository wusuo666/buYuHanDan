/* pages/gamePlaceMatch/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.game-area {
  display: flex;
  width: 100%;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.idiom-list,
.location-list {
  display: flex;
  flex-direction: column;
  width: 45%;
}

.idiom-item,
.location-item {
  background-color: #f0f0f0;
  padding: 20rpx;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  border: 2rpx solid #ccc;
}

.idiom-item.selected,
.location-item.selected {
  border-color: #007bff;
  background-color: #e0f0ff;
  color: #007bff;
}

.idiom-item.matched,
.location-item.matched {
  background-color: #d4edda;
  border-color: #28a745;
  color: #28a745;
  opacity: 0.7;
}

.score-area {
  margin-top: 20rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #555;
}

.reset-button {
  margin-top: 40rpx;
  padding: 15rpx 30rpx;
  background-color: #007bff;
  color: white;
  border-radius: 8rpx;
  font-size: 32rpx;
}