.map-container {
  width: 100%;
  height: 100vh;
  position: relative;
}

.map {
  width: 100%;
  height: 100%;
}

.controls-container {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.control-item {
  background: #fff;
  padding: 16rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.control-icon {
  width: 40rpx;
  height: 40rpx;
}

.control-item cover-text {
  font-size: 24rpx;
  color: #333;
}

.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.popup-swiper-container {
  width: 85%;
  height: 80vh;
  border-radius: 24rpx;
  overflow: hidden;
}

.idiom-swiper {
  width: 100%;
  height: 100%;
}

.popup-content {
  width: 100%;
  height: 100%;
  background: #fff;
  display: flex;
  flex-direction: column;
}

.popup-header {
  padding: 30rpx;
  background: linear-gradient(135deg, #4e54c8, #8f94fb);
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-shrink: 0;
}

.idiom-title {
  font-size: 36rpx;
  font-weight: bold;
  flex: 1;
  margin-right: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.close-btn {
  font-size: 40rpx;
  font-weight: bold;
  padding: 10rpx 20rpx;
  flex-shrink: 0;
}

.header-indicator {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 20rpx;
  flex-shrink: 0;
}

.indicator-text {
  color: white;
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.indicator-dots {
  display: flex;
  gap: 8rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.5);
}

.dot.active {
  background: white;
}

.image-carousel {
  height: 280rpx;
  position: relative;
  flex-shrink: 0;
}

.image-swiper {
  height: 100%;
  width: 100%;
}

.carousel-image {
  width: 100%;
  height: 100%;
}

.image-indicator {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  background: rgba(0, 0, 0, 0.5);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.popup-body {
  flex: 1;
  padding: 0 30rpx;
  box-sizing: border-box;
  height: calc(80vh - 480rpx); /* 动态计算高度 */
}

.info-section {
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.characters-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.character-tag {
  background: #f0f5ff;
  color: #4e54c8;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  border: 1rpx solid #d6e4ff;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.segments-container {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 20rpx;
}

.segment-item {
  display: flex;
  margin-bottom: 16rpx;
  line-height: 1.6;
}

.segment-item:last-child {
  margin-bottom: 0;
}

.segment-number {
  color: #4e54c8;
  font-weight: bold;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.segment-text {
  color: #666;
  flex: 1;
  word-wrap: break-word;
  word-break: break-all;
}

.story-text {
  color: #666;
  line-height: 1.8;
  font-size: 28rpx;
  text-align: justify;
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal; /* 确保文本可以正常换行 */
}

.location-info {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
}

.location-name {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.location-address {
  display: block;
  color: #666;
  font-size: 26rpx;
  line-height: 1.5;
  word-wrap: break-word;
  word-break: break-all;
}

.bottom-padding {
  height: 40rpx;
}

.swipe-hint {
  position: absolute;
  bottom: 20rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  animation: swipeHint 2s infinite;
}

.hint-text {
  background: rgba(78, 84, 200, 0.9);
  color: white;
  padding: 16rpx 32rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
}

@keyframes swipeHint {
  0%, 100% { opacity: 0.7; transform: translateX(0); }
  50% { opacity: 1; transform: translateX(10rpx); }
}

.loading-container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.7);
  padding: 30rpx 50rpx;
  border-radius: 16rpx;
}

.loading-text {
  color: white;
  font-size: 32rpx;
}

