/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: stretch;
  box-sizing: border-box;
}

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
}

/* 占位：全局通用样式，可按需扩展 */
.section {
  padding: 16px;
}
.muted {
  color: #888;
}